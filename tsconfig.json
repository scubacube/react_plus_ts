{
    "compilerOptions": {
        "target": "ES6",
        "module": "es6",
        "strict": true,
        "noEmit": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "jsx": "preserve",
        "resolveJsonModule": true,
        "moduleResolution": "Node",
        "plugins": [
            {
                "name": "typescript-plugin-css-modules"
            }
        ]
    },
    "include": ["./src/**/*"]
    
}